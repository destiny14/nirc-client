extends layout_login

block content
	div.navbar.navbar-inverse.navbar-fixed-top
		div.container
			div.navbar-header
				a(class='navbar-brand', href='#') IRC Client
			div.collapse.navbar-collapse
				ul(class = 'nav navbar-nav')
					li(class='active'): a(href='#') Home
					li: a(href='#') About
					li: a(href='#') Contact
	div.container
		form(class='form-signin', role='form', method='post')
			h2.form-signin-heading Einloggen
			input(name='Nickname', type='nickname', class='form-control', placeholder='Nickname', required, autofocus)
			input(name='Server', type='server', class='form-control', placeholder='Server', required)
			input(name='Channel', type='channel', class='form-control', placeholder='#Channel', required)
			button(class='btn btn-lg btn-primary btn-block', type='submit') Los